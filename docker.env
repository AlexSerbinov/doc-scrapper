# Docker Environment Configuration for Doc Scrapper

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# RAG Configuration
RAG_LLM_MODEL=gpt-4o-mini
RAG_EMBEDDING_MODEL=text-embedding-3-small

# Server Ports (Internal Container Ports)
CHROMA_PORT=8000
RAG_SERVER_PORT=8001
WEB_APP_PORT=3000

# External Access Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Network Configuration
CHROMA_HOST=chromadb
RAG_VECTOR_STORE_CONNECTION_STRING=http://chromadb:8000

# Next.js Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_API_URL=https://localhost
NEXT_PUBLIC_RAG_API_URL=http://rag-api:8001

# Security
SSL_COUNTRY=UA
SSL_STATE=Ukraine
SSL_CITY=Kyiv
SSL_ORGANIZATION=DocScrapper
SSL_COMMON_NAME=localhost

# Development/Production Toggle
DOCKER_ENVIRONMENT=production

# Logging
LOG_LEVEL=info

# Performance
DOCKER_MEMORY_LIMIT=2g
DOCKER_CPU_LIMIT=1.0 