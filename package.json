{
  "name": "doc-scrapper",
  "version": "1.0.0",
  "description": "Universal documentation scraper built with TypeScript",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "scrape": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "dev": "npm run dev:all",
    "restart": "chmod +x restart.sh && ./restart.sh",
    "stop": "chmod +x stop.sh && ./stop.sh",
    "stop:all": "npm run stop",
    "chroma:start": "chroma run --host localhost --port 8000 --path ./chroma",
    "chroma:clean": "rm -rf chroma && echo 'ðŸ§¹ ChromaDB Ð¾Ñ‡Ð¸Ñ‰ÐµÐ½Ð¾'",
    "rag:build": "tsc",
    "rag:index": "npm run rag:build && node dist/rag/cli/indexDocuments.js",
    "rag:chat": "npm run rag:build && node dist/rag/cli/chat.js",
    "rag:server": "npm run rag:build && node dist/rag/cli/server.js",
    "rag:stats": "curl -s http://localhost:8001/stats | jq",
    "web:install": "cd web-app && npm install",
    "web:dev": "cd web-app && npm run dev",
    "web:build": "cd web-app && npm run build",
    "web:start": "cd web-app && npm start",
    "dev:all": "concurrently \"npm run chroma:start\" \"npm run rag:server\" \"npm run web:dev\"",
    "dev:backend": "concurrently \"npm run chroma:start\" \"npm run rag:server\"",
    "dev:web": "npm run web:dev",
    "reindex": "npm run chroma:clean && npm run rag:index",
    "health": "curl -s http://localhost:8001/health && echo"
  },
  "bin": {
    "doc-scrapper": "./dist/index.js"
  },
  "keywords": [
    "documentation",
    "scraper",
    "typescript",
    "cli",
    "markdown",
    "rag",
    "chatbot",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^0.0.50",
    "@ai-sdk/openai": "^0.0.66",
    "@langchain/textsplitters": "^0.0.0",
    "ai": "^3.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^1.5.0",
    "cli-progress": "^3.12.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.21.2",
    "fs-extra": "^11.1.0",
    "openai": "^4.0.0",
    "turndown": "^7.1.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
